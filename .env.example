# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration
CORS_ORIGIN=*

# File Upload Configuration
MAX_FILE_SIZE=10485760

# Robot Simulator Configuration
DEFAULT_BATTERY_VOLTAGE=12400
DEFAULT_AUGER_SPEED=50
SIMULATION_UPDATE_INTERVAL=200

# HIL Configuration
HIL_ENABLED=true
HIL_DEVICE_PATH=/dev/ttyUSB0
HIL_BAUD_RATE=115200

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/server.log