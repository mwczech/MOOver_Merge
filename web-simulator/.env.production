# Production Environment Variables for MELKENS WB Simulator

NODE_ENV=production
PORT=3001
WS_PORT=3002
HOST=0.0.0.0

# CORS - Railway URLs will be injected automatically
CORS_ORIGINS=https://melkens-wb-simulator.up.railway.app

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000

# Simulation Configuration
SIMULATION_UPDATE_RATE=100
ROBOT_SIMULATION_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_TO_FILE=false

# Performance
MAX_LOGS_IN_MEMORY=10000
MAX_WEBSOCKET_CONNECTIONS=100