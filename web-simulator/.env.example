# MOOver MELKENS Web Simulator Environment Variables

# Server Configuration
NODE_ENV=production
PORT=3001

# Robot Simulator Configuration
ROBOT_NAME=MOOver_MELKENS
ROBOT_VERSION=1.0.0

# HIL Configuration (Hardware-in-the-Loop)
HIL_ENABLED=true
HIL_DEFAULT_PORT=COM3
HIL_DEFAULT_BAUDRATE=115200
HIL_CONNECTION_TIMEOUT=5000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_TIMEOUT=60000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FIRMWARE_EXTENSIONS=.bin,.hex
ALLOWED_CONFIG_EXTENSIONS=.json

# MQTT Configuration (for HIL)
MQTT_BROKER_HOST=192.168.1.100
MQTT_BROKER_PORT=1883
MQTT_CLIENT_ID=moover_simulator

# Database Configuration (if needed for logging)
# DATABASE_URL=postgres://user:password@localhost:5432/moover_db

# Security Configuration
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Development Configuration
DEV_MODE=false
DEBUG_SIMULATOR=false
MOCK_HARDWARE=true

# Railway Specific (automatically set by Railway)
# RAILWAY_STATIC_URL=
# RAILWAY_GIT_COMMIT_SHA=
# RAILWAY_GIT_AUTHOR=
# RAILWAY_GIT_BRANCH=
# RAILWAY_GIT_REPO_NAME=
# RAILWAY_GIT_REPO_OWNER=

# Optional: External Services
# SENTRY_DSN=
# ANALYTICS_API_KEY=